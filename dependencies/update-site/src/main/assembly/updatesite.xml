<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1
        http://maven.apache.org/xsd/assembly-1.1.1.xsd
    ">

    <id>updatesite</id>
    <formats>
        <format>dir</format>
    </formats>

    <dependencySets>

        <!-- copy features -->
        <dependencySet>
            <outputFileNameMapping>${artifact.groupId}.${artifact.artifactId}_${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>features</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <scope>compile</scope>
            <includes>
                <include>*:*.feature:jar:*</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputFileNameMapping>${artifact.artifactId}_${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>*:*.feature:jar</exclude>
                <exclude>*:dependencies-site:jar</exclude>
            </excludes>
        </dependencySet>

        <!--
        <dependencySet>
            <outputFileNameMapping>${artifact.groupId}-${artifact.artifactId}.sources_${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>plugins</outputDirectory>
            <includes>
                <include>*:*:sources:jar</include>
            </includes>
        </dependencySet>
        -->

    </dependencySets>

    <files>
        <file>
            <source>site.xml</source>
        </file>
    </files>

</assembly>